<style>
  @keyframes appear {
        from {
            opacity: 0;
            scale: 0.5;
        }
        to {
            opacity: 1;
            scale: 1;
        }
  }

  .secondary-image, .subtitle, .main-text {
      animation: appear linear;
      animation-timeline: view();
      animation-range: entry 0% cover 40%;
  }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
  const container = document.getElementById("scrolling-container");
  let index = 0;

  // Use optional chaining and nullish coalescing to handle potential null or undefined values
  const items = container?.querySelectorAll("p") ?? [];
  let itemHeight = 0;

  // Calculate the average item height
  items.forEach(item => {
      itemHeight += item.offsetHeight;
    });
  itemHeight /= items.length;
  function autoScroll() {
    index++;

    if (index >= items.length) {
      index = 0;
      container?.scrollTo({ top: 0, behavior: "smooth" });
    } else {
      container?.scrollTo({ top: index * itemHeight, behavior: "smooth" });
    }
  }

  setInterval(autoScroll, 1500);
});
</script>







