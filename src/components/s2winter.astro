---
import VideoWinter from "../assets/winter-moble01.mp4";


---

<style>
    .video-container {
    position: relative;
    width: 100%;
    height: 100vh;
  }
    .layout-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: grid;
    grid-template-rows: 1fr 2fr 1fr; /* Dividimos en tres partes iguales */
    grid-gap: 2rem;
    padding: 2rem;
  }

  .layout-item {
    background-color: rgba(255, 255, 255, 0);
    padding: 2rem;
    text-align: center;
    margin-top: 5rem;
  }


</style>
<div class="video-container md:flex md:justify-center w-screen border-y-4 border-slate-900">
    
    <video
        slot="background"
        class="object-cover h-screen w-screen md:w-8/12 lg:w-5/12 md:bg-center"
        autoplay
        loop
        muted
        src={VideoWinter}>
    </video>
    <video
        slot="background"
        class="hidden  object-cover h-screen w-screen md:w-6/12"
        autoplay
        loop
        muted
        src={VideoWinter}>
    </video>
    
    <div class="layout-container">
        <div class="layout-item bg-transparent"></div>
        <div class="layout-item bg-transparent"></div>
        <article class="layout-item flex flex-col w-6/6 h-20 mx-auto text-center text-white mb-10 [&>p]:text-3xl [&>p]:font-light [&>p]:h-32 [&>p]:leading-10 [&>p]:mt-5">
            <p>Winter arc season</p>
            <p></p>
            <p></p>
            <p></p>
            
        </article>
    </div>

</div>